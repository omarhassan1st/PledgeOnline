@model IEnumerable<_CharTrijob>
@{
    ViewData["Title"] = "Top Thieves";
}

<h1 class="page-header">Top Thieves</h1>
<hr />

<form method="post" asp-area="" asp-controller="Ranking" asp-action="TopThieves">
    <div class="mb-3">
        <label for="ThiveName" class="form-label d-block">Thive Name</label>
        <input type="text" name="ThiveName" value="@TempData["ThiveName"]" class="form-control w-25 d-inline" id="ThiveName">
      <button type="submit" class="btn btn-dark">Submit</button>
  </div>
</form>

<div class="row p-lg-2 ranking-tables">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">CHARACTER</th>
                <th scope="col">LEVEL</th>
                <th scope="col">EXP</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
                foreach (_CharTrijob Thive in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@Thive.CharName</td>
                        <td>@Thive.Level</td>
                        <td>@Thive.Exp</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>

