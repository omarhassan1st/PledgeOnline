@model IEnumerable<_Char>
@{
    ViewData["Title"] = "Top Player";
}

<h1 class="page-header">Top Player</h1>
<hr />

<form method="post" asp-area="" asp-controller="Ranking" asp-action="TopPlayer">
    <div class="mb-3">
        <label for="CharName" class="form-label d-block">CharName</label>
        <input type="text" name="CharName" value="@TempData["CharName"]" class="form-control w-25 d-inline" id="CharName">
     <button type="submit" class="btn btn-dark">Submit</button>
   </div>
</form>

<div class="row p-lg-2 ranking-tables">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">CHARACTER</th>
                <th scope="col">GUILD</th>
                <th scope="col">LEVEL</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
                foreach (_Char Chars in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@Chars.CharName16</td>
                        <td>@Chars.NickName16</td> <!--Guild Name-->
                        <td>@Chars.CurLevel</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>

