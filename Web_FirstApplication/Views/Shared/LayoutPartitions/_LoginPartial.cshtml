@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-action="Logout" asp-controller="Identity">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link Js-navHeader" asp-area="" asp-action="Register" asp-controller="Identity">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link Js-navHeader" asp-area=""  asp-action="Login" asp-controller="Identity">Login</a>
        </li>
    }
</ul>
